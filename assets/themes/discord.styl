// File copy+pasted from vuetify settings/_theme.styl

@require '../node_modules/vuetify/src/stylus/settings/_colors'

$theme := {
  primary: #7289da
  accent: #99aab5
  secondary: #23272a
  info: $blue.base
  warning: $amber.base
  error: $red.accent-2
  success: $green.base
}

// NOTE: this theme is not complete; it'll likely collide with things
$material-light := {
  status-bar: {
    regular: #E0E0E0,
    lights-out: rgba(#fff, .7)
  },
  app-bar: $theme.primary
  background: #2c2f33,
  cards: $theme.secondary
  chips: {
    background: $grey.lighten-2,
    color: rgba(#000, .87)
  },
  dividers: rgba(#000, .12),
  text: {
    theme: #fff,
    primary: rgba(#fff, .87),
    secondary: rgba(#fff, .54),
    disabled: rgba(#fff, .38)
  },
  icons: {
    active: rgba(#fff, .54),
    inactive: rgba(#fff, .38)
  },
  buttons: {
    disabled: rgba(#fff, .26),
    focused: rgba(#fff, .12),
    focused-alt: rgba(#fff, .6),
    pressed: rgba(#999, .4)
  },
  expansion-panels: {
    focus: #EEEEEE
  },
  selection-controls: {
    active: $teal.base,
    thumb: {
      inactive: $grey.lighten-5,
      disabled: $grey.lighten-1
    },
    track: {
      inactive: rgba(#000, .38),
      disabled: rgba(#000, .12)
    }
  },
  slider: {
    active: rgba(#000, .38),
    inactive: rgba(#000, .26),
    disabled: rgba(#000, .26),
    discrete: #000
  },
  tabs: {
    active: $theme.primary,
    inactive: rgba(#000, .70)
  },
  input-bottom-line: rgba(#000, .42),
  stepper: {
    active: rgba(#fff, 1),
    completed: rgba(#000, 0.87),
    hover: rgba(#000, 0.54)
  },
  table: {
    active: $grey.lighten-4
    hover: $grey.lighten-3
  },
  picker: {
    background: $theme.primary
  },

  bg-color: #2c2f33
  fg-color: #000
  text-color: #000
  primary-text-percent: .87
  secondary-text-percent: .54
  disabledORhints-text-percent: .38
  divider-percent: .12
  active-icon-percent: .54
  inactive-icon-percent: .38
}

@require '../node_modules/vuetify/src/stylus/settings/_theme'